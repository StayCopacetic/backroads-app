//* #63. - Title Component:

// Title.js
const Title = ({ title, subTitle }) => {
  return (
    <div className='section-title'>
      <h2>
        {title} <span>{subTitle}</span>
      </h2>
    </div>
  );
};

export default Title;

// About.js
// import
import Title from './Title';

// display
<Title title='about' subTitle='us' />;

